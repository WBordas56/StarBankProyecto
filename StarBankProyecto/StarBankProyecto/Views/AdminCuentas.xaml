<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarBankProyecto.Views.AdminCuentas">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Bienvenido"/>

                <StackLayout>
                    <Frame>
                        <Button x:Name="saldo" Text="Saldo" Clicked="saldo_Clicked"/>
                    </Frame>

                    <Frame>
                        <Button x:Name="Transferencias" Text="Tranferencias" Clicked="Transferencias_Clicked"/>
                    </Frame>

                    <Frame>
                        <Button x:Name="Historial" Text="Historial" Clicked="Historial_Clicked"/>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>