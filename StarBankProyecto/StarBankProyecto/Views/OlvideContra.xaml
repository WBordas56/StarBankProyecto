<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarBankProyecto.Views.OlvideContra"
             Title="Star Bank App">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Background="#fafafa">
                <Frame Margin="20,30,20,30">
                    <StackLayout>
                        <Label>Correo</Label>
                        <Entry x:Name="txtCorreo" Margin="0,0,0,0" Keyboard="Text"/>

                        <Button x:Name="btnEnviar" Text="Enviar Codigo" Background="#74C0FC" Clicked="changeContra"/>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>