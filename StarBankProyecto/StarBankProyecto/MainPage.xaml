<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarBankProyecto.MainPage"
             Background="#white">

    <StackLayout Background="#0097a9">

        <!--<StackLayout Background="#0097a9" Padding="0,90,0,90">
            <Label HorizontalOptions="Center" TextColor="white" FontFamily="Arial" FontSize="35">Star Bank App</Label>
        </StackLayout>-->
        <Label HorizontalOptions="Center" Margin="0,90,0,0" TextColor="white" FontFamily="Arial" FontSize="35">Star Bank App</Label>
        
        <ScrollView>
            <Frame  Margin="30,20,30,20" Background="#FFF" CornerRadius="5">
                <StackLayout>

                    
                    <Label HorizontalOptions="Center" FontSize="25" Margin="20" TextColor="Black">Iniciar Sesión</Label>
                    
                    <Label FontSize="15" TextColor="black" Margin="0,10,0,0">Usuario:</Label>
                    <Entry x:Name="txtUser" FontSize="15" Margin="0,0,0,0" Keyboard="Text" Placeholder="Ingresa tu usuario" PlaceholderColor="#bbb" TextColor="black"/>


                    <Label FontSize="15" TextColor="black" Margin="0,10,0,0">Contraseña:</Label>
                    <Entry x:Name="txtPass" FontSize="15" Margin="0,0,0,0" Keyboard="Text" IsPassword="True" Placeholder="Ingresa tu contraseña" PlaceholderColor="#bbb" TextColor="black"/>

                    <Button Clicked="forgetPass" Text="¿Olvidaste tu contraseña?" Background="#FFF" CornerRadius="100" TextColor="#0097a9"/>
                    <Button x:Name="btnInrgesar" Text="Ingresar" Background="#ff8300" CornerRadius="100" TextColor="WhiteSmoke" Clicked="Ingresar" Margin="0,0,0,10"/>
                    
                    
                    
                    

                </StackLayout>
            </Frame>
            
        </ScrollView>

    </StackLayout>

</ContentPage>
