<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarBankProyecto.MainPage"
             Background="#white">

    <StackLayout>
        <ScrollView>
            <Frame  Margin="30,150,30,20" Background="#F4F4F6" CornerRadius="8">
                <StackLayout>

                    
                    <Label HorizontalOptions="Center" FontSize="25">Inicias Sesión</Label>
                    <Label FontSize="16" TextColor="black" Margin="0,30,0,0">Usuario:</Label>
                    <Entry x:Name="txtUser" Margin="0,0,0,0" Keyboard="Text" Placeholder="Ingresa tu usuario"/>
                    

                    <Label>Contraseña:</Label>
                    <Entry x:Name="txtPass" Margin="0,0,0,0" Keyboard="Text" IsPassword="True" Placeholder="Ingresa tu contraseña"/>

                    <Button Clicked="forgetPass" Text="¿Olvidaste tu contraseña?" Background="#F4F4F6" CornerRadius="4" TextColor="DodgerBlue"/>
                    <Button x:Name="btnInrgesar" Text="Ingresar" Background="#74C0FC" CornerRadius="4" TextColor="WhiteSmoke" Clicked="Ingresar"/>
                    
                    
                    
                    

                </StackLayout>
            </Frame>
            
        </ScrollView>

    </StackLayout>

</ContentPage>
