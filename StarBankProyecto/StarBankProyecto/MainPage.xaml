<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarBankProyecto.MainPage"
             Background="wheat">

    <StackLayout>
        <ScrollView>
            <Frame  Margin="30,150,30,20" Background="#F4F4F6" CornerRadius="8">
                <StackLayout>

                    <Label HorizontalOptions="Center" FontSize="25">Inicias Sesión</Label>
                    <Label>Usuario:</Label>
                    <Entry x:Name="txtUser" Margin="0,0,0,0" Keyboard="Text"/>
                    

                    <Label>Clave:</Label>
                    <Entry x:Name="txtPass" Margin="0,0,0,0" Keyboard="Text" IsPassword="True"/>

                    <Button x:Name="btnInrgesar" Text="Ingresar" Background="#74C0FC" CornerRadius="4" TextColor="WhiteSmoke" Clicked="Ingresar"/>

                    <Button Clicked="forgetPass" Text="Olvide mi contraseña"/>



                </StackLayout>
            </Frame>
            
        </ScrollView>

    </StackLayout>

</ContentPage>
